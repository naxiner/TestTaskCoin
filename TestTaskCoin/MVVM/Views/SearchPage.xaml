<Page x:Class="TestTaskCoin.MVVM.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTaskCoin.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="800"
      Title="SearchPage">

    <Grid Background="White" Margin="10,0,10,0">
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Data -->
            <RowDefinition Height="336" />
            <!-- Buttons -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Search" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Data -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <Grid Margin="20">
                <StackPanel>
                    <TextBox Width="300" Height="40" Margin="10" Text="{Binding SearchQuery}" FontSize="16" />
                    <Button Content="Search" Width="100" Height="40" Margin="10" Command="{Binding SearchCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <Button Grid.Row="2" Content="Back" Margin="0,10,0,0" HorizontalAlignment="Left" Padding="10,5"/>
    </Grid>
</Page>
